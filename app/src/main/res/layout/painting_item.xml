<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/idImageViewPainting"
        android:layout_width="135dp"
        android:src="@drawable/painting1"
        android:layout_height="135dp"/>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/idTextViewPaintingName"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Painting name"
            android:textColor="@color/black"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/idTextViewPaintingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Science fiction Fantasy painting created Kobamelo an artist born in 1990 "
            android:textColor="#8A8A8A"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/idTextViewPaintingPrice"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="P18 000"
            android:textColor="@color/cool_grey"
            android:textStyle="bold|italic"
            android:textSize="17dp"/>




    </LinearLayout>


</LinearLayout>
